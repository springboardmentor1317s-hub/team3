      <!-- Admin Login Form (Hidden by default) -->
      <form id="adminForm" class="space-y-4 hidden">
        <div>
          <label class="block font-semibold">Admin Email</label>
          <input type="email" class="w-full p-3 rounded-xl border" placeholder="Enter admin email" />
        </div>

        <div>
          <label class="block font-semibold">Password</label>
          <input type="password" class="w-full p-3 rounded-xl border" placeholder="Enter admin password" />
        </div>

        <button
          class="w-full py-3 rounded-xl font-semibold"
          style="background:#FF4EB8; color:white;">
          Login as Admin
