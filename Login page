    <!-- Card -->
    <div class="rounded-2xl shadow-lg p-8 floating" style="background:#F5EEDF;">
      
      <!-- Toggle Buttons -->
      <div class="flex mb-8">
        <button id="studentBtn"
          class="w-1/2 py-3 text-center font-semibold rounded-l-xl border"
          style="background:#FF4EB8; color:white;">
          Student Login
        </button>

        <button id="adminBtn"
          class="w-1/2 py-3 text-center font-semibold rounded-r-xl border"
          style="background:#E5D5C8; color:#1A1A1A;">
          Admin Login
        </button>
      </div>

      <!-- Student Login Form -->
      <form id="studentForm" class="space-y-4">
        <div>
          <label class="block font-semibold">Email</label>
          <input type="email" class="w-full p-3 rounded-xl border" placeholder="Enter your email" />
        </div>

        <div>
          <label class="block font-semibold">Password</label>
          <input type="password" class="w-full p-3 rounded-xl border" placeholder="Enter your password" />
